

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Student Data
    style.
      body {
          background-color: cyan;
      }
      table, th, td, tr {
          margin: auto;
          text-align: center;
          border-radius: 5px;
          border: 1px solid black;
      }
      th {
          background-color: grey;
      }
      h1, h2 {
          text-align: center;
          color: red;
          font-family: JokerMan;
      }
      .progress-bar {
          width: 100%;
          height: 20px;
          background-color: lightgray;
          border-radius: 5px;
          margin: 5px auto;
          position: relative;
          overflow: hidden;
      }
      .progress {
          width: 0%;
          height: 100%;
          border-radius: 5px;
          animation: progressAnimation 2s ease-out forwards;
      }
      @keyframes progressAnimation {
          from {
              width: 0%;
              background: linear-gradient(to right, white, rgb(255, 105, 180));
          }
          to {
            background: linear-gradient(to right, white, rgb(255, 105, 180));
              each i in data
                  width: ${i.percentage}%;
                  
          }
      }
  body
    h1 ADITYA COLLEGE OF ENGINEERING
    h2 DEPARTMENT OF CSE
    hr
    table
      tr
        th ID
        th NAME
        th DEPART
        th EMAIL
        th PERCENTAGE
      each i in data
        tr 
            td=i._id 
            td=i.name 
            td=i.depart 
            td=i.email 
            td
                .progress-bar
                    .progress(style=`width: ${i.percentage}%;`) #{i.percentage}%
